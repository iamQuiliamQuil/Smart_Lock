<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartLock_Demo.Views.ListViewPage1"
             Title="Locks">
    <StackLayout>
    <ListView x:Name="MyListView"
            ItemsSource="{Binding Items}"
            ItemTapped="GetDetails"
            CachingStrategy="RecycleElement"
            Header="Look at pictures taken by the camera on your SmartLock"
            SeparatorColor="Black">
        <!--Built in Cells-->
        <ListView.ItemTemplate>
            <DataTemplate>
                <ImageCell ImageSource="{Binding CameraCapture}" Text="Date - Time" Detail="Photo Details" DetailColor="Black"/>
            </DataTemplate>
        </ListView.ItemTemplate>

